@model Ecommerce.ViewModel.UserProductViewModel
@{
    ViewBag.Title = "Load More";
}
<div class="bestSeller-nav-container">
      <ul class="bestSeller-nav">
        <li><a href="#" class="active">Home</a></li>
        <li>/</li>
        <li><a href="#" class="active">Hot Deals</a></li>
        <li>/</li>
        <li><a href="#" style="color: #262626">@Model.Product.Name</a></li>
      </ul>
    </div>
@{
