<div class="bestSeller-container">
      <div class="bestSeller">
        <img src=@Model.Product.ProductImage alt="" width="100%" />
        <div class="bestSeller-desc">
          <h3>@Model.Product.Name</h3>
          <p class="stars reviews">
            @{
                for(int i = 0; i < 5; i++)
                {
                    if(i < Model.Product.Ratings)
                    {
                        <i class="fa-solid fa-star stars-ratings"></i>
                    }
                    else
                    {    
                        <i class="fa fa-star stars-gray"></i>
                    }
                }
            }
            &nbsp;&nbsp;</><span style="color: #262626"> 0 reviews</span>
            <a href="#">submit a review</a>
          </p>
          <hr />
          <div class="load-price">
              @{
                   int amount = (int) Model.Product.UnitPrice;
                   int discountAmount = (int) Model.Product.DiscountedUnitPrice;
                    string price2 = Ecommerce.Utilities.PriceAdjuster.PriceEdit($"{amount}");
                 string discountedPrice2 = Ecommerce.Utilities.PriceAdjuster.PriceEdit($"{discountAmount}");
              }
            <p>@price2</p>
            <p>@discountedPrice2</p>
            <p>@Model.Product.PercentOff% Off</p>
          </div>
          <div class="stock-container">
            <ul class="stock">
              <div class="stock-avail">
              <li>Availability: </li>
                <p>In stock</p>
            </div>
            <div class="stock-avail">
              <li>Category :</li>
                 <p>Accessories</p>
              </div>
              <li>Free shipping:</li>
            </ul>
          </div>
          <hr>
          <div class="select-color">
            <div class="colors">
              <p>Select Color:</p>
                @{
                    //string[] colorsArr= Model.Product.Colors.Split();
                   // foreach(string color in colorsArr)
                   //// {
                    //    <span class="dot blue" style="background-color:@color"></span>
                   // }
                }
            </div>
          </div>
          <div>
          <div class="size">
            <form>
              <label for="cars">Size:</label>
              <select name="cars" id="cars">
                <option value="volvo">XS</option>
                <option value="volvo">L</option>
                <option value="saab">XL</option>
                <option value="opel">XXL</option>
              </select>
            </form>            
          </div>
        </div>
        </div>
        <div class="best-container">
          <div class="bst">
          <img src=@Model.Products[0].ProductImage alt="">
          <p class="stars reviews">
            @{
                for(int i = 0; i < 5; i++)
                {
                    if(i < Model.Products[0].Ratings)
                    {
                        <i class="fa-solid fa-star stars-ratings"></i>
                    }
                    else
                    {    
                        <i class="fa fa-star stars-gray"></i>
                    }
                }
            }
            </p>
            <div class="discount">
              <p >$499</p>
              <p>$599</p>
  
            </div>
          </div>
  
        </div>
       
      </div>

    </div>
    <div class="product-images">
